{
  "name": "sharedspoons",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node build/src/server.js",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "swagger": "tsoa spec-and-routes",
    "test": "jest --runInBand --coverage --verbose --no-cache --forceExit",
    "pretest": "npm run swagger"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.4",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.8.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.4",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsoa": "^6.5.1",
    "typescript": "^5.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 5000,
    "collectCoverageFrom": [
      "src/**/*.[jt]s"
    ],
    "coveragePathIgnorePatterns": [
      "src/server.[jt]s"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "build"
    ]
  }
}
